[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = limine
Target = limine-bin
Target = limine-git

[Action]
Description = Remove /boot/EFI/arch-limine/limine.conf to keep /boot/limine.conf authoritative
When = PostTransaction
Depends = bash
Exec = /usr/bin/bash -c 'if [ -d /boot/EFI/arch-limine ]; then /usr/bin/rm -f /boot/EFI/arch-limine/limine.conf || true; fi'
