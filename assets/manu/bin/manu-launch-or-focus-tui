#!/bin/bash

#    ┓ ┏┓┳┳┳┓┏┓┓┏        ┏┓┏┓┏┓┳┳┏┓  ┏┳┓┳┳┳
#    ┃ ┣┫┃┃┃┃┃ ┣┫  ┏┓┏┓  ┣ ┃┃┃ ┃┃┗┓   ┃ ┃┃┃
#    ┗┛┛┗┗┛┛┗┗┛┛┗  ┗┛┛   ┻ ┗┛┗┛┗┛┗┛   ┻ ┗┛┻
#                                   

APP_ID="org.manu.$(basename $1)"
LAUNCH_COMMAND="manu-launch-tui $@"

exec manu-launch-or-focus "$APP_ID" "$LAUNCH_COMMAND"
