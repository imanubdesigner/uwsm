#!/bin/bash

#    ┏┓┏┓┳┓┏┓┏┓┳┓┏┓┏┓┓┏┏┓┳┓
#    ┗┓┃ ┣┫┣ ┣ ┃┃┗┓┣┫┃┃┣ ┣┫
#    ┗┛┗┛┛┗┗┛┗┛┛┗┗┛┛┗┗┛┗┛┛┗
#    Thanks to DHH/Omarchy

STATE_FILE=~/.local/state/manu/toggles/screensaver-off

if [[ -f $STATE_FILE ]]; then
  rm -f $STATE_FILE
  notify-send "󱄄  Screensaver enabled" "  The screensaver is now active."
else
  mkdir -p "$(dirname $STATE_FILE)"
  touch $STATE_FILE
  notify-send "󱄄  Screensaver disabled" "󰈈  You'll use simply hyprlock now."
fi
