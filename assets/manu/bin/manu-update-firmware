#!/bin/bash

#    ┳┳┏┓┳┓┏┓┏┳┓┏┓  ┏┓┳┳┓┳┳┓┓ ┏┏┓┳┓┏┓
#    ┃┃┃┃┃┃┣┫ ┃ ┣   ┣ ┃┣┫┃┃┃┃┃┃┣┫┣┫┣
#    ┗┛┣┛┻┛┛┗ ┻ ┗┛  ┻ ┻┛┗┛ ┗┗┻┛┛┗┛┗┗┛
#                             

set -e
echo -e "\e[32mUpdate Firmware\e[0m"

if manu-cmd-missing fwupdmgr; then
  manu-pkg-add fwupd
fi

fwupdmgr refresh
sudo fwupdmgr update
