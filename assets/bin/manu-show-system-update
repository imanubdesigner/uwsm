#!/bin/bash

#    ┏┓┓┏┏┓┓ ┏  ┳┓┏┓┳┓┏┓
#    ┗┓┣┫┃┃┃┃┃  ┃┃┃┃┃┃┣
#    ┗┛┛┗┗┛┗┻┛  ┻┛┗┛┛┗┗┛
#                by Manu

# Theme: Catppuccin Mocha
# Green: #A6E3A1 | Blue: #89B4FA | Text: #CDD6F4 | Reset: \033[0m

echo

# Catppuccin Mocha Colors (24-bit ANSI)
GREEN="\033[38;2;166;227;161m"
BLUE="\033[38;2;137;180;250m"
RESET="\033[0m"

# Animated spinner with custom color
gum spin \
  --spinner "pulse" \
  --spinner.foreground="#89B4FA" \
  --title "$(echo -e "${BLUE}󰚭 ${GREEN}System updated successfully!${RESET} 󰛨  Press any key to close...")" \
  -- bash -c 'read -n 1 -s'

# Desktop notification (Nerd Font icons)
notify-send "󰚭  System updated" "󰛨  All packages are up to date." -a "Manu Script" -u normal
