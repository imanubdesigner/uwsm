#!/bin/bash

#    ┏┓┓┏┏┓┓ ┏  ┳┓┏┓┳┓┏┓
#    ┗┓┣┫┃┃┃┃┃  ┃┃┃┃┃┃┣
#    ┗┛┛┗┗┛┗┻┛  ┻┛┗┛┛┗┗┛
#                by Manu

# Theme: Catppuccin Mocha
# Red: #F38BA8 | Gray: #9399B2 | Reset: \033[0m

echo

# Catppuccin Mocha Colors (24-bit ANSI)
RED="\033[38;2;243;139;168m"
GRAY="\033[38;2;147;153;178m"
RESET="\033[0m"

# Red spinner with error message (Nerd Font icons)
gum spin \
  --spinner "pulse" \
  --spinner.foreground="#F38BA8" \
  --title "$(echo -e "${RED}󰅙  Operation failed or interrupted by user!${RESET}\n${GRAY}󰛨  Press any key to close...${RESET}")" \
  -- bash -c 'read -n 1 -s'

# Desktop notification (Nerd Font icons)
notify-send "󰅙  Operation failed" "󰛨  Process interrupted or failed." -a "Manu Script" -u critical
