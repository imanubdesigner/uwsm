#!/bin/bash

#    ┓ ┏┓┳┳┳┓┏┓┓┏  ┏┓┳┓┳┏┳┓┏┓┳┓
#    ┃ ┣┫┃┃┃┃┃ ┣┫  ┣ ┃┃┃ ┃ ┃┃┣┫
#    ┗┛┛┗┗┛┛┗┗┛┛┗  ┗┛┻┛┻ ┻ ┗┛┛┗
#                       by Manu

case "${EDITOR:-nvim}" in
nvim | vim | nano | micro | hx)
  exec setsid uwsm app -- "$TERMINAL" -e "$EDITOR" "$@"
  ;;
*)
  exec setsid uwsm app -- "$EDITOR" "$@"
  ;;
esac
