#              ┗┻┛┗ ┗┛┛┗┣┛┣┛
#                       ┛ ┛ by Manu

if (($# == 0)); then
  echo "Usage: manu-launch-or-focus-webapp [window-pattern] [url]"
  exit 1
fi

exec manu-launch-or-focus "$1" "manu-launch-webapp '$2'"
