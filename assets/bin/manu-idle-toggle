#!/bin/bash

#    ┏┳┓┏┓┏┓┏┓┓ ┏┓  ┳┳┓┓ ┏┓
#     ┃ ┃┃┃┓┃┓┃ ┣   ┃┃┃┃ ┣
#     ┻ ┗┛┗┛┗┛┗┛┗┛  ┻┻┛┗┛┗┛
#                   by Manu

if pgrep -x hypridle >/dev/null; then
  pkill -x hypridle
  notify-send "  Hypridle" "󰈉  Stop locking computer when idle"
else
  uwsm-app -- hypridle >/dev/null 2>&1 &
  notify-send "  Hypridle" "󰈈  Now locking computer when idle"
fi
