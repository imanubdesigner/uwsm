[global]
    # Monitor to display notifications on.
    monitor = 0
    # Notification follow mode. 'mouse' follows the mouse, 'keyboard' follows the keyboard focus, 'none' uses 'origin'.
    follow = none
    # Notification dimensions.
    width = 300
    height = 150
    class = Dunst

    # Notification position and alignment.
    origin = top-right
    alignment = "left"
    vertical_alignment = "center"
    ellipsize = "middle"
