[general]

# Aumenta il framerate per un'animazione più fluida
framerate = 60

# Numero di barre (0 per riempire automaticamente la console)
bars = 0

# Sensibilità (se autosens è disabilitato)
sensitivity = 100

# Frequenze di taglio
lower_cutoff_freq = 50
higher_cutoff_freq = 10000

# Nessun input dopo 0 secondi per disabilitare lo sleep mode
sleep_timer = 0


[input]

# Metodo di cattura dell'audio: PulseAudio
method = pulse

# Sorgente audio per catturare l'audio in uscita (es. da Spotify)
source = auto


[output]

# Metodo di output: ncurses per il terminale
method = ncurses

# Canali visivi: stereo specchia i canali, mono è da sinistra a destra
channels = stereo

# Orientamento della visualizzazione
orientation = bottom

# Sincronizzazione per terminale Alacritty per prevenire flickering
alacritty_sync = 1


[color]

# Tema Catppuccin Mocha
background = '#1e1e2e'
foreground = '#cdd6f4'

# Gradiente Catppuccin Mocha
gradient = 1
gradient_color_1 = '#94e2d5'
gradient_color_2 = '#89dceb'
gradient_color_3 = '#74c7ec'
gradient_color_4 = '#89b4fa'
gradient_color_5 = '#cba6f7'
gradient_color_6 = '#f5c2e7'
gradient_color_7 = '#eba0ac'
gradient_color_8 = '#f38ba8'


[smoothing]

# Riduzione del rumore per un visualizzatore più morbido
noise_reduction = 77
