#!/bin/bash

#    ┳┳┏┓┳┓┏┓┏┳┓┏┓  ┏┓┓┏┏┓┏┳┓┏┓┳┳┓
#    ┃┃┃┃┃┃┣┫ ┃ ┣   ┗┓┗┫┗┓ ┃ ┣ ┃┃┃
#    ┗┛┣┛┻┛┛┗ ┻ ┗┛  ┗┛┗┛┗┛ ┻ ┗┛┛ ┗
#            ┏┓┏┓┳┓┳┏┓┏┳┓
#            ┗┓┃ ┣┫┃┃┃ ┃
#            ┗┛┗┛┛┗┻┣┛ ┻
#                          by Manu

# update-system: script to update system packages (only pacman) on Arch Linux

# If there is no terminal open, open it for me
if [ ! -t 1 ]; then
  # Change 'kitty' with your favorite terminal (alacritty, foot, gnome-terminal, etc.)
  exec ghostty -e bash "$0" "$@"
fi

# Command
PACMAN="sudo pacman -Syu"

# Colors
GREEN="\e[32m"
YELLOW="\e[33m"
RED="\e[31m"
RESET="\e[0m"

# Functions for colored output
print_info() {
  echo -e "${YELLOW}[$(date '+%H:%M:%S')] $1${RESET}"
}

print_ok() {
  echo -e "${GREEN}✓ $1${RESET}"
}

print_err() {
  echo -e "${RED}✗ $1${RESET}"
}

# Start
print_info "Starting system update..."

# Update official pacman packages only
print_info "Updating official packages..."
if $PACMAN; then
  print_ok "Pacman update completed."
else
  print_err "Pacman update failed."
  exit 1
fi

print_ok "System successfully updated!"

# Waybar cache update
rm -f /tmp/waybar-updates-cache 2>/dev/null
pkill -SIGRTMIN+8 waybar 2>/dev/null

# Keep terminal open to see the result
echo
echo -e "${GREEN}Press Enter to close...${RESET}"
read
